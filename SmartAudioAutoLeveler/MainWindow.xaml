<Window x:Class="SmartAudioAutoLeveler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Audio Auto-Leveler"
        Height="400" Width="600"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        
        <!-- Light Theme -->
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LightSurfaceBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="LightBorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#111827"/>
        <SolidColorBrush x:Key="LightSecondaryTextBrush" Color="#6B7280"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#111827"/>
        <SolidColorBrush x:Key="DarkSurfaceBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="DarkBorderBrush" Color="#374151"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="DarkSecondaryTextBrush" Color="#9CA3AF"/>
        
        <!-- Dynamic Theme Brushes -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{Binding Source={x:Static SystemColors.WindowBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{Binding Source={x:Static SystemColors.ControlBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{Binding Source={x:Static SystemColors.ControlDarkBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{Binding Source={x:Static SystemColors.WindowTextBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{Binding Source={x:Static SystemColors.GrayTextBrush}, Path=Color}"/>
        
        <!-- Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,4"/>
        </Style>
        
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="{DynamicResource SuccessBrush}"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="12" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="20,16">
                        <TextBlock Text="ðŸ”Š" 
                                   FontSize="24" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"/>
                        <TextBlock Text="Smart Audio Auto-Leveler" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                Margin="20,16">
                        <Button x:Name="MinimizeButton" 
                                Content="â”€" 
                                Width="32" 
                                Height="32"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource SecondaryBrush}"
                                Click="MinimizeButton_Click"
                                Margin="0,0,8,0"/>
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="32" 
                                Height="32"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource ErrorBrush}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="20">
                <StackPanel>
                    <!-- Status Overview -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="System Status" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Audio Manager Status -->
                                <Ellipse Grid.Row="0" Grid.Column="0" 
                                         x:Name="AudioManagerStatusIndicator"
                                         Style="{StaticResource StatusIndicatorStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="Audio Manager: Initializing..." 
                                           x:Name="AudioManagerStatusText"
                                           Style="{StaticResource StatusTextStyle}"/>
                                
                                <!-- Foreground Detection Status -->
                                <Ellipse Grid.Row="1" Grid.Column="0" 
                                         x:Name="ForegroundDetectionStatusIndicator"
                                         Style="{StaticResource StatusIndicatorStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Text="Foreground Detection: Initializing..." 
                                           x:Name="ForegroundDetectionStatusText"
                                           Style="{StaticResource StatusTextStyle}"/>
                                
                                <!-- Current Foreground App -->
                                <Ellipse Grid.Row="2" Grid.Column="0" 
                                         x:Name="ForegroundAppStatusIndicator"
                                         Style="{StaticResource StatusIndicatorStyle}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           Text="Foreground App: None" 
                                           x:Name="ForegroundAppStatusText"
                                           Style="{StaticResource StatusTextStyle}"/>
                                
                                <!-- Active Sessions -->
                                <Ellipse Grid.Row="3" Grid.Column="0" 
                                         x:Name="ActiveSessionsStatusIndicator"
                                         Style="{StaticResource StatusIndicatorStyle}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                           Text="Active Audio Sessions: 0" 
                                           x:Name="ActiveSessionsStatusText"
                                           Style="{StaticResource StatusTextStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Quick Actions -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="OpenSettingsButton" 
                                        Content="Open Settings" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="OpenSettingsButton_Click"
                                        Margin="0,0,12,0"/>
                                
                                <Button x:Name="RefreshStatusButton" 
                                        Content="Refresh Status" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{DynamicResource SecondaryBrush}"
                                        Click="RefreshStatusButton_Click"
                                        Margin="0,0,12,0"/>
                                
                                <Button x:Name="MinimizeToTrayButton" 
                                        Content="Minimize to Tray" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{DynamicResource WarningBrush}"
                                        Click="MinimizeToTrayButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Recent Activity -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Recent Activity" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock x:Name="RecentActivityText" 
                                       Text="No recent activity" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="0,0,12,12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <Grid Margin="20,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal">
                        <TextBlock Text="Running in background. Check system tray for quick access." 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <Button x:Name="ExitButton" 
                                Content="Exit Application" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource ErrorBrush}"
                                Click="ExitButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
