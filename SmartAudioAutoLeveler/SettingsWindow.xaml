<Window x:Class="SmartAudioAutoLeveler.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Audio Auto-Leveler Settings"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Color Resources for Light/Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        
        <!-- Light Theme -->
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LightSurfaceBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="LightBorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#111827"/>
        <SolidColorBrush x:Key="LightSecondaryTextBrush" Color="#6B7280"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#111827"/>
        <SolidColorBrush x:Key="DarkSurfaceBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="DarkBorderBrush" Color="#374151"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="DarkSecondaryTextBrush" Color="#9CA3AF"/>
        
        <!-- Dynamic Theme Brushes -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{Binding Source={x:Static SystemColors.WindowBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{Binding Source={x:Static SystemColors.ControlBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{Binding Source={x:Static SystemColors.ControlDarkBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{Binding Source={x:Static SystemColors.WindowTextBrush}, Path=Color}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{Binding Source={x:Static SystemColors.GrayTextBrush}, Path=Color}"/>
        
        <!-- Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="12" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="20,16">
                        <TextBlock Text="ðŸ”Š" 
                                   FontSize="24" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"/>
                        <TextBlock Text="Smart Audio Auto-Leveler" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                Margin="20,16">
                        <Button x:Name="ThemeToggleButton" 
                                Content="ðŸŒ™" 
                                Width="32" 
                                Height="32"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="ThemeToggleButton_Click"
                                Margin="0,0,8,0"/>
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="32" 
                                Height="32"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource ErrorBrush}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="20">
                <StackPanel>
                    <!-- Volume Settings -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Volume Settings" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Background Volume:" 
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                
                                <Slider Grid.Column="1" 
                                        x:Name="BackgroundVolumeSlider"
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="50"
                                        Style="{StaticResource ModernSliderStyle}"
                                        ValueChanged="BackgroundVolumeSlider_ValueChanged"
                                        Margin="0,0,16,0"/>
                                
                                <TextBlock Grid.Column="2" 
                                           x:Name="VolumeValueText"
                                           Text="50%" 
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           MinWidth="40"/>
                            </Grid>
                            
                            <TextBlock Text="This percentage determines how much background applications' volume will be reduced when they are not in focus." 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- App Exclusions -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Application Exclusions" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Applications in this list will not have their volume automatically adjusted:" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Column="0" 
                                         x:Name="NewAppTextBox"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         PlaceholderText="Enter application name (e.g., Spotify)"
                                         Margin="0,0,12,0"/>
                                
                                <Button Grid.Column="1" 
                                        Content="Add" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="AddAppButton_Click"/>
                            </Grid>
                            
                            <ListBox x:Name="ExcludedAppsListBox" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MaxHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding}" 
                                                       Foreground="{DynamicResource TextBrush}"
                                                       VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="1" 
                                                    Content="Remove" 
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Background="{DynamicResource ErrorBrush}"
                                                    Padding="8,4"
                                                    FontSize="12"
                                                    Click="RemoveAppButton_Click"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- General Settings -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="General Settings" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="AutostartCheckBox" 
                                      Content="Start with Windows" 
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,0,12"
                                      Checked="AutostartCheckBox_Checked"
                                      Unchecked="AutostartCheckBox_Unchecked"/>
                            
                            <CheckBox x:Name="MinimizeToTrayCheckBox" 
                                      Content="Minimize to system tray" 
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,0,12"
                                      Checked="MinimizeToTrayCheckBox_Checked"
                                      Unchecked="MinimizeToTrayCheckBox_Unchecked"/>
                            
                            <CheckBox x:Name="StartMinimizedCheckBox" 
                                      Content="Start minimized" 
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,0,12"
                                      Checked="StartMinimizedCheckBox_Checked"
                                      Unchecked="StartMinimizedCheckBox_Unchecked"/>
                            
                            <CheckBox x:Name="EnableNotificationsCheckBox" 
                                      Content="Enable notifications" 
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,0,12"
                                      Checked="EnableNotificationsCheckBox_Checked"
                                      Unchecked="EnableNotificationsCheckBox_Unchecked"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Active Sessions -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Active Audio Sessions" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Currently active applications with audio:" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap"/>
                            
                            <ListView x:Name="ActiveSessionsListView" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      MaxHeight="200">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Application" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayName}" 
                                                               Foreground="{DynamicResource TextBrush}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Current Volume" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding CurrentVolume, StringFormat=P0}" 
                                                               Foreground="{DynamicResource TextBrush}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Original Volume" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding OriginalVolume, StringFormat=P0}" 
                                                               Foreground="{DynamicResource TextBrush}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Status" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding IsForeground, Converter={StaticResource BoolToStatusConverter}}" 
                                                               Foreground="{Binding IsForeground, Converter={StaticResource BoolToStatusColorConverter}}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            
                            <Button x:Name="RefreshSessionsButton" 
                                    Content="Refresh Sessions" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="RefreshSessionsButton_Click"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="0,0,12,12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <Grid Margin="20,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal">
                        <TextBlock Text="Settings saved to: " 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="SettingsPathText" 
                                   Text="{Binding SettingsPath}" 
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center"
                                   FontFamily="Consolas"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <Button x:Name="ResetButton" 
                                Content="Reset to Defaults" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{DynamicResource WarningBrush}"
                                Click="ResetButton_Click"
                                Margin="0,0,12,0"/>
                        <Button x:Name="SaveButton" 
                                Content="Save Settings" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="SaveButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
